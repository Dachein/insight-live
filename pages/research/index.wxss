.container {
  min-height: 100vh;
  transition: all 0.3s ease;
}

.building {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  transition: all 0.3s ease;
}

.building-emoji {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.8;
}

.building-text {
  font-size: 32rpx;
  font-weight: 400;
  transition: color 0.3s ease;
}

/* 深色主题 */
.container.dark {
  background-color: #1C1C1E;
}

.container.dark .building-text {
  color: rgba(255, 255, 255, 0.6);
}

/* 浅色主题 */
.container.light {
  background-color: #F2F2F7;
}

.container.light .building-text {
  color: rgba(0, 0, 0, 0.6);
} 