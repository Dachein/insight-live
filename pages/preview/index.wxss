.preview-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: #000;
  z-index: 1000;
}

.preview-swiper {
  width: 100%;
  height: 100%;
}

.movable-area {
  width: 100%;
  height: 100%;
}

.movable-view {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0.5), transparent);
  transition: opacity 0.3s ease;
  z-index: 1001;
}

.nav-bar.hidden {
  opacity: 0;
  pointer-events: none;
}

.nav-back {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0,0,0,0.3);
}

.back-icon {
  color: #FFFFFF;
  font-size: 48rpx;
  line-height: 1;
}

.nav-counter {
  color: #FFFFFF;
  font-size: 28rpx;
} 